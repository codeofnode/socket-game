{
  "name": "socket-game",
  "version": "0.0.0",
  "description": "A simple socket based game",
  "bin": "server.js",
  "scripts": {
    "start": "./node_modules/.bin/nodemon blocks --exec node_modules/.bin/babel-node & ./node_modules/.bin/nodemon --watch root --exec \"./node_modules/.bin/babel-node ./node_modules/.bin/json2server\"",
    "build": "rm -rf dist && mkdir dist && mkdir dist/root && ./node_modules/.bin/json -f package.json -e \"delete this.devDependencies;delete this.scripts;delete this.nyc;delete this.babel\" > dist/package.json && ./node_modules/.bin/babel root -d dist/root && node_modules/.bin/babel-node blocks && cp README.md server.json j2s.json dist/ && npm run mbuild",
    "mbuild": "mkdir -p dist/modules && ./node_modules/.bin/babel modules -d dist/modules",
    "prodtest": "TEST_DIR=dist/root npm run test",
    "test": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/mocha -b test/**",
    "all": "npm run lint && npm test && npm run build && npm run prodtest && npm run docs",
    "docs": "./node_modules/.bin/jsdoc -c .jsdoc.json",
    "lint": "./node_modules/.bin/eslint root modules",
    "struct": "./node_modules/.bin/json2server -t=1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/codeofnode/socket-game.git"
  },
  "keywords": [
    "server",
    "game",
    "lightweight",
    "cli",
    "socket"
  ],
  "author": "Ramesh Kumar <codeofnode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codeofnode/socket-game/issues"
  },
  "homepage": "https://github.com/codeofnode/socket-game",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.1",
    "json": "^9.0.6",
    "json2server": "^0.1.17",
    "minami": "^1.2.3",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.1"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "plugins": [
      "transform-async-to-generator",
      "transform-runtime"
    ],
    "presets": [
      "es2017",
      "stage-2",
      [
        "env",
        {
          "targets": {
            "node": "4.0.0"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "socket.io": "^2.0.3",
    "util.promisify": "^1.0.0"
  }
}
