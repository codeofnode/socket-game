{
  "vars": {
    "contactEmail": "codeofnode@gmail.com"
  },
  "root": {
    "$": {
      "name": "{{pkg.name}}",
      "version": "{{pkg.version}}"
    },
    "users": {
      "$post": {
        "=": [{
          "eval": "{{params.body.username}}",
          "ifFailed": "EMAIL_MISS"
        }, {
          "eval": "{{params.body.password}}",
          "ifFailed": "PASS_MISS"
        }],
        "@" : "createUser"
      }
    },
    "games": {
      "$": {
        "@": "listGames"
      }
    },
    "rooms": {
      "+": {
        "user": {
          "@": "fetchCurrentUser"
        }
      },
      "=": [{
        "eval": "{{user}}",
        "ifFailed": "AUTH_FAILED"
      }],
      "$post": {
        "=": [{
          "eval": "{{params.body.gameName}}",
          "ifFailed": "GAME_MISS"
        }, {
          "eval": "{{params.body.roomName}}",
          "ifFailed": "ROOM_MISS"
        }],
        "@" : "createRoom"
      },
      ":roomName": {
        "users": {
          "$post": {
            "@" : "createRoomUser"
          }
        }
      }
    }
  }
}
